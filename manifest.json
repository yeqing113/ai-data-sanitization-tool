{
  "manifest_version": 3,
  "name": "AI assistant - Data Sanitization Tool",
  "version": "1.0",
  "description": "A Chrome extension for data sanitization",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}